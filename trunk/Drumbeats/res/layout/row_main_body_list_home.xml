<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_view_row_height"
    >

    <!-- ListRow Left sied Thumbnail image -->
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/list_view_row_height"></LinearLayout>
    <ImageView
        android:id="@+id/row_main_body_list_home_folder"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_view_row_height"
        android:layout_marginLeft="@dimen/row_main_body_list_home_folder_margin_left"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/folder" />

    <!-- Displayname -->

    <TextView
        android:id="@+id/row_main_body_list_home_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/row_main_body_list_home_name_margin_left"
        android:layout_toRightOf="@+id/row_main_body_list_home_folder"
        android:textSize="@dimen/row_main_body_list_home_name_text_size"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/row_main_body_list_home_folder_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/row_main_body_list_home_folder_arrow_margin_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/folder_arrow" />

</RelativeLayout>