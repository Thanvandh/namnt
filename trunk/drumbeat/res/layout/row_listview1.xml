<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <!-- ListRow Left sied Thumbnail image -->

    <ImageView
        android:id="@+id/row_listview1_folder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter"
        android:src="@drawable/folder" />

    <!-- Displayname -->

    <TextView
        android:id="@+id/row_listview1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/row_listview1_folder"
        android:text="Drum beats"
        android:textColor="@android:color/white"/>

    <ImageView
        android:id="@+id/row_listview1_folder_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter"
        android:src="@drawable/folder_arrow" />

</RelativeLayout>