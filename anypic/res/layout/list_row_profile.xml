<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" >

    <RelativeLayout
        android:id="@+id/list_profile_row_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <!-- ListRow Left sied Thumbnail image -->

        <LinearLayout
            android:id="@+id/list_profile_row_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="@drawable/smallprofilepicture"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/list_profile_row_profile_pic"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/rihanna" />
        </LinearLayout>

        <!-- Displayname -->

        <TextView
            android:id="@+id/list_profile_row_displayname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_profile_row_profile"
            android:layout_toRightOf="@+id/list_profile_row_profile"
            android:text="Rihanna"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <!-- Time -->

        <TextView
            android:id="@+id/list_profile_row_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_profile_row_displayname"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/list_profile_row_profile"
            android:text="Time ago"
            android:textColor="#343434"
            android:textSize="10dip" />

        <!-- ListRow Right sied Thumbnail image -->

        <RelativeLayout
            android:id="@+id/list_profile_row_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@+id/list_profile_row_comment"
            android:background="@drawable/icon_like"
            android:padding="10dp" >

            <TextView
                android:id="@+id/list_profile_row_like_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="10"
                android:textColor="#000000"
                android:textSize="10dip" />
        </RelativeLayout>
        <!-- ListRow Right sied Thumbnail image -->

        <RelativeLayout
            android:id="@+id/list_profile_row_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/icon_comment"
            android:padding="10dp" >

            <TextView
                android:id="@+id/list_profile_row_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="9"
                android:textColor="#000000"
                android:textSize="10dip" />
        </RelativeLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/list_profile_row_bottom"
        android:layout_width="match_parent"
        android:layout_height="300px"
        android:layout_below="@+id/list_profile_row_top"
        android:scaleType="fitCenter"
        android:src="@drawable/test" />

</RelativeLayout>