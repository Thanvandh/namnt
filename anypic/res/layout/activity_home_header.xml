<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_header"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector" >

    <LinearLayout
        android:id="@+id/layout_img_profile"
        android:layout_width="143px"
        android:layout_height="143px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10px"
        android:background="@drawable/profile_pic_stroke" >

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="10px"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:scaleType="fitCenter"
            android:src="@drawable/profile_pic_stroke" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_img_profile"
        android:layout_centerHorizontal="true"
        android:text="My name"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/img_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_pics" />

    <TextView
        android:id="@+id/txt_number_pics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_pics"
        android:layout_marginLeft="20dp"
        android:text="0 pictures"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/img_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/icon_followers" />

    <TextView
        android:id="@+id/txt_number_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/img_followers"
        android:layout_marginRight="15dp"
        android:text="0 followers"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txt_number_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_number_followers"
        android:layout_marginRight="15dp"
        android:text="0 following"
        android:textColor="@android:color/black" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_profilename" >
    </ListView>

</RelativeLayout>