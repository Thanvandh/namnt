<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity" >

    <ImageView 
        android:id="@+id/activity_photo_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_upload_photo" 
        android:layout_centerHorizontal="true"/>
    <Button 
        android:id="@+id/bt_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_above="@+id/bt_take_a_photo"
        android:layout_centerHorizontal="true" />
    <Button 
        android:id="@+id/bt_take_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo from camera"
        android:layout_above="@+id/bt_choose_a_photo"
        android:layout_centerHorizontal="true" />
    <Button 
        android:id="@+id/bt_choose_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a photo from gallery"
        android:layout_alignParentBottom="true" 
        android:layout_centerHorizontal="true"/>"

</RelativeLayout>