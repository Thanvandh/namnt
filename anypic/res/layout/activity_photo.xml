<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoActivity" >

    <ImageView 
        android:id="@+id/activity_photo_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_upload_photo" 
        android:layout_centerHorizontal="true"/>
    <EditText
            android:id="@+id/activity_photo_text_box_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="3dip"
            android:visibility="gone"
            android:lines="2"
            android:layout_below="@+id/activity_photo_picture"
            android:layout_toLeftOf="@+id/activity_photo_bt_publish"
            android:background="@android:color/white" />

    <Button 
            android:id="@+id/activity_photo_bt_publish"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:visibility="gone"
        	android:layout_below="@+id/activity_photo_picture"
        	android:layout_alignParentRight="true"
        	android:text="Publish" />"
 <!--    <Button 
        android:id="@+id/bt_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:layout_above="@+id/bt_take_a_photo"
        android:layout_centerHorizontal="true" />
   -->
    <Button 
        android:id="@+id/bt_take_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take a photo from camera"
        android:layout_above="@+id/bt_choose_a_photo"
        android:layout_centerHorizontal="true" />
    <Button 
        android:id="@+id/bt_choose_a_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a photo from gallery"
        android:layout_alignParentBottom="true" 
        android:layout_centerHorizontal="true"/>"

</RelativeLayout>