<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
     >
	 <RelativeLayout 
	     android:id="@+id/listview1_header"
	     android:layout_width="match_parent"
	     android:layout_height="60dp"
	     android:background="@drawable/top_bar">
	     <ImageButton
                    android:id="@+id/listview1_bt_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/listview1_bt_favorites"
                    android:scaleType="centerInside"
                    android:src="@drawable/logo"
                    android:background="@android:color/transparent" />
	     <ImageButton
                    android:id="@+id/listview1_bt_favorites"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/listview1_bt_settings"
                    android:src="@drawable/favoritesbutton_white" 
                    android:background="@android:color/transparent"/>
	     <ImageButton
                    android:id="@+id/listview1_bt_settings"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/listview1_bt_more_edit"
                    android:src="@drawable/settingsbutton_white" 
                    android:background="@android:color/transparent"/>
	     <ImageButton
                    android:id="@+id/listview1_bt_more_edit"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/morebutton_white"
                    android:background="@android:color/transparent" />
	 </RelativeLayout>
     <ListView
        android:id="@+id/listview1_activity"
        android:layout_below="@+id/listview1_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"  />
